<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient9"
    tools:context=".QuizPackage.QuizActivity2">


    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="10dp"
        android:onClick="shareWith"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#ef96c5"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/share"
            android:backgroundTint="@color/black"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:fontFamily="@font/ramaraja"
                        android:text="score"
                        android:textAllCaps="true"
                        android:textSize="45sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/caveat"
                        android:text="100%"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgressBar"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    app:cpb_background_progressbar_color="#DF84DB"
                    app:cpb_background_progressbar_width="30dp"
                    app:cpb_progressbar_color="#E91E63"
                    app:cpb_progressbar_width="10dp"
                    app:cpb_round_border="true"
                    app:cpb_start_angle="180" />


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="#ECA4CA"
                app:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="All the best"
                    android:gravity="center"
                    android:fontFamily="@font/crimson_text"
                    android:textColor="@color/black"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAllCaps="true"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="7dp"
                    android:backgroundTint="#CCECEF"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="total"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:fontFamily="@font/ramaraja"
                        android:textSize="40dp"
                        android:textColor="#0952A3"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#CCECEF"
                    app:cardElevation="7dp">
                    <TextView
                        android:id="@+id/totalId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="40"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:fontFamily="@font/ramaraja"
                        android:textSize="40dp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#CCECEF"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="right"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:fontFamily="@font/ramaraja"
                        android:textSize="40dp"
                        android:textColor="#4CAF50"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#CCECEF"
                    app:cardElevation="7dp">
                    <TextView
                        android:id="@+id/rightId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="40"
                        android:gravity="center"
                        android:fontFamily="@font/ramaraja"
                        android:textAllCaps="true"
                        android:textSize="40dp"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#CCECEF"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="wrong"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:fontFamily="@font/ramaraja"
                        android:textSize="40dp"
                        android:textColor="#F44336"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#CCECEF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">
                    <TextView
                        android:id="@+id/wrongId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="40"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="40dp"
                        android:fontFamily="@font/ramaraja"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#CCECEF"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="skip"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="40dp"
                        android:fontFamily="@font/ramaraja"
                        android:textColor="#9C27B0"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#CCECEF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="7dp">
                    <TextView
                        android:id="@+id/skipId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="40"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="40dp"
                        android:fontFamily="@font/ramaraja"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>